<body>
<div class="wrapper">
        <div class="title"><span>Reset password</span></div>


    <form action="/reset-password" method="post">
    <div class="row">
        <input placeholder="New Password" name="newPassword" id="newPassword" type="password" required><br>
     </div> 
     <div class="row">
        <input placeholder="Confirm Password" name="confirmPassword" id="confirmPassword" type="password" required><br>
     </div>   
     <div class="row">  
     <input placeholder="Email" type="text" id="email" name="email" required>
    </div>
     <div class="row">
        <input class="sub" type="submit" value="Submit">
        </div>

    
    </form>
</div>
